{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build basic.cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "--std=c++14",
                "basic.cpp",
                "-o",
                "basic"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
